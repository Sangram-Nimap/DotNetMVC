@model BestStoreMVC.Models.ProductsDtoClass

@{
    ViewData["Title"] = "Create Product";
}

<h2 class="text-center mb-4">Add New Product</h2>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Brand" class="form-label"></label>
                <input asp-for="Brand" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFileName" class="form-label">Product Image</label>
                <input asp-for="ImageFileName" type="file" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
